nextflow_process {

    name "Test Process HMMSCAN"
    script "../main.nf"
    process "HMMSCAN"

    test("Testing HMMSCAN on *E. coli* LexA post-processed ORFs...") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = file("{$projectDir}/data/fasta/lexA_Ecoli.orfs.pp.fasta")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
