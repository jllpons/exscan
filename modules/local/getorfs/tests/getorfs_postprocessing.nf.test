nextflow_process {

    name "Test Process GETORFS_POSTPROCESSING"
    script "../main.nf"
    process "GETORFS_POSTPROCESSING"

    test("Testing process GETORFS_POSTPROCESSING on *E. coli* LexA GETORFS output...") {


        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = file("${projectDir}/data/fasta/lexA_Ecoli.orfs.fasta")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }
    }
}
